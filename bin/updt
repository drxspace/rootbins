#!/bin/bash
#
# _________        ____  ____________         _______ ___________________
# ______  /__________  |/ /___  ____/________ ___    |__  ____/___  ____/
# _  __  / __  ___/__    / ______ \  ___  __ \__  /| |_  /     __  __/   
# / /_/ /  _  /    _    |   ____/ /  __  /_/ /_  ___ |/ /___   _  /___   
# \__,_/   /_/     /_/|_|  /_____/   _  .___/ /_/  |_|\____/   /_____/   
#                                    /_/           drxspace@gmail.com
#

# Checks that the script is running as root, if not
# it will ask for permissions
# Source: http://unix.stackexchange.com/a/28796
if (($EUID != 0)); then
	if [[ -t 1 ]]; then
		sudo "$0" "$@"
	else
		exec 1>output_file
		gksu "$0 $@"
	fi
	exit
fi

rm -f /tmp/apt-errors.log

option="-q"
[[ $1 == "-q" ]] && option="-qq"

echo "Updating repositories. Please wait..."
{ apt $option update && apt upgrade && apt dist-upgrade ; } 2>/tmp/apt-errors.log

[[ -s /tmp/apt-errors.log ]] && {
	echo "[─────────────────────────────────────────────────────────────────]"
	echo -e "\e[0;91m\e[0;100m"
	cat /tmp/apt-errors.log
	echo -e "\e[0m"
	echo "[─────────────────────────────────────────────────────────────────]"
}

exit $?
